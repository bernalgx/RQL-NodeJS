    body.bg-info
    
        .container
            br
            div.container
                div.row
                    div.col-sm-6.col-md-4.col-md-offset-4(style="margin-top:10%;")                
                        div.account-wall.panel-body
                            img.profile-img(src='/images/photo.png', alt='')
                            form.form-signin(role='form',method='POST', action='/usuario/identificar')
                                h1.text-center.login-title Por favor, identificate.
                                if(usuario)
                                    input.form-control(type='text', name='usuario', value='#{usuario}', required='')
                                    input.form-control(type='password', name='pass', placeholder='Contrasenia', required='', autofocus='')
                                else
                                    input.form-control(type='text', name='usuario', placeholder='Usuario', required='', autofocus='')
                                    input.form-control(type='password', name='pass', placeholder='Contrasenia', required='')
                                center
                                    label.checkbox
                                        input(type='checkbox', value='remember-me', name='recordar')
                                        |  Recordarme
                                button.btn.btn-lg.btn-primary.btn-block(type='submit') Entrar